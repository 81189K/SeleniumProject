<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %C{1} - %msg%n" />
        </Console>

        <!-- General File Appender -->
        <File name="FileLogger" fileName="logs/app.log" append="true">
            <Filters>
                <!-- Exclude ERROR and FATAL logs -->
                <ThresholdFilter level="error" onMatch="DENY" onMismatch="ACCEPT" />
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %C{1} - %msg%n" />
        </File>

        <!-- Error File Appender -->
        <File name="ErrorFileLogger" fileName="logs/error.log" append="true">
            <Filters>
                <!-- Include only ERROR and FATAL logs -->
                <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY" />
            </Filters>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %C{1} - %msg%n" />
        </File>
    </Appenders>

    <Loggers>
        <!-- Logger for com.seleniumproject (your package) -->
        <Logger name="com.seleniumproject" level="trace" additivity="false">
            <AppenderRef ref="Console" />
            <AppenderRef ref="FileLogger" />
            <AppenderRef ref="ErrorFileLogger" />
        </Logger>

        <!-- Root logger (important for everything else) -->
        <Root level="info">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>
